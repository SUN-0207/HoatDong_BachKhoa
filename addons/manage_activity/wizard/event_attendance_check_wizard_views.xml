<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="event_attendance_check_wizard_form" model="ir.ui.view">
    <field name="name">event.attendace.check.wizard.form</field>
    <field name="model">event.attendance.check.wizard</field>
    <field name="arch" type="xml">
      <form class="diemdanh-wizard">
        <group>
          <field name="event_id" invisible="1"/>
          <field name="mssv" string="MSSV"/>
          <field name="name_student" />
        </group>
        <footer class="d-flex justify-content-end">
          <button string="Điểm danh" name="attendance_check" type="object" default_focus="1" class="btn-primary" invisible="1" />
          <button string="Đóng cửa sổ" name="close_wizard" type="object" class="btn btn-primary"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>