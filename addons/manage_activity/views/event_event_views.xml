    <record id="event_event_search_inherit" model="ir.ui.view">
      <field name="name">event.event.search.inherit</field>
      <field name="model">event.event</field>
      <field name="inherit_id" ref="event.view_event_search" />
      <field name="arch" type="xml">
        <search position="inside">
          <searchpanel>
            <field name="stage_id" icon="fa fa-cogs" enable_counters="1" select="multi"/>
            <field name="department_response" icon="fa fa-building" enable_counters="1" select="multi"/>
            <field name="tag_ids" icon="fa fa-tags" enable_counters="1" select="multi"/>
            <field name="event_type_id" icon="fa fa-file" enable_counters="1" select="multi"/>
            <field name="user_id" icon="fa fa-user" enable_counters="1" select="multi"/>
 
          </searchpanel>
        </search>
      </field>
    </record>
  </data>
</odoo>
    