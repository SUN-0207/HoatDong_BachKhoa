<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Form View -->
    <record id="event_event_form_inherit" model="ir.ui.view">
      <field name="name">event.event.form.inherit</field>
      <field name="model">event.event</field>
      <field name="inherit_id" ref="event.view_event_form" />
      <field name="arch" type="xml">
        <xpath expr="//form" position="replace">
          <form string="Events" class="o_event_form_view">
            <header>
                <field name="stage_name" invisible="true" />
                <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
            </header>
            <sheet>
                <div class="oe_button_box" name="button_box" groups="base.group_user">
                    <button name="%(event.event_registration_action_stats_from_event)d"
                            type="action" class="oe_stat_button" icon="fa-line-chart">
                        <span class="o_stat_text">
                            Registration statistics
                        </span>
                    </button>
                    <button name="%(event.act_event_registration_from_event)d"
                            type="action"
                            context="{'search_default_expected': True}"
                            class="oe_stat_button"
                            icon="fa-users"
                            help="Total Registrations for this Event">
                        <field name="seats_expected" widget="statinfo" string="Attendees"/>
                    </button>
                    <field name="website_url" invisible="1"/>
                    <field name="is_published" widget="website_redirect_button"/>
                </div>
                <field name="active" invisible="1"/>
                <field name="company_id" invisible="1"/>
                <field name="legend_blocked" invisible="1"/>
                <field name="legend_normal" invisible="1"/>
                <field name="legend_done" invisible="1"/>
                <widget name="web_ribbon" text="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                <div class="d-flex flex-row">
                  <div class="col-8 mb24">
                    <h2>Tên hoạt động</h2>                   
                    <field class="fs-1 no-border-input" name="name" widget="text" />
                  </div>
                  <div class="col-3 text-end px-3">
                    <label for="created_by_name" string="Tao boi"/> 
                    <field name="created_by_name" readonly="1" />
                  </div>
                </div>
                <group string="Quan ly hoat dong" name="right_event_details">
                  <field name="organizer_id" invisible="1"/>
                  <group>
                  <field name="activity_manager" widget="many2many_tags" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                  </group>
                  <group>
                  <field name="department_response" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                  </group>
                </group>
                <group string="Thong tin hoat dong">
                  <h3>Mô tả hoạt động </h3>
                  <field name="description" widget="text" class="border-input"/>
                  <group>
                    <field name="status_activity"/>
                    <label for="date_begin" string="Dang ky"/>
                    <div class="o_row">
                      <field name="date_begin_registration" widget="daterange" nolabel="1" class="oe_inline" options="{'related_end_date': 'date_end_registration'}"
                        attrs="{'readonly': [('stage_name', '=', 'Đã duyệt')]}"                    />
                      <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                      <field name="date_end_registration" widget="daterange" nolabel="1" class="oe_inline" options="{'related_start_date': 'date_begin'}" 
                      attrs="{'readonly': [('stage_name', '=', 'Đã duyệt')]}"  />
                    </div>
                    <label for="date_begin" string="Diễn ra"/>
                    <div class="o_row">
                      <field attrs="{'readonly': [('stage_name', '=', 'Đã duyệt')]}"  name="date_begin" widget="daterange" nolabel="1" class="oe_inline" options="{'related_end_date': 'date_end'}"/>
                      <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                      <field attrs="{'readonly': [('stage_name', '=', 'Đã duyệt')]}"  name="date_end" widget="daterange" nolabel="1" class="oe_inline" options="{'related_start_date': 'date_begin'}"/>
                    </div>
                  </group>
                  <group >
                    <field name="active" invisible="1"/>
                    <field name="event_type_id" string="Nhóm hoạt động"  options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                    <field name="tag_ids" string="Ý nghĩa hoạt động" widget="many2many_tags" options="{'color_field': 'color', 'no_quick_create': True,'no_create_edit':True,'no_open': True,}"/>
                    <field  attrs="{'readonly': [('stage_name', '=', 'Đã duyệt')]}"  string="Giấy tờ liên quan" name="attach_file" widget="many2many_binary" />
                  </group>
                </group>
                <group string="Thiet lap hoat dong">
                  <group>
                    <group>
                    <field name="max_social_point"  attrs="{'readonly': [('stage_name', '=', 'Đã duyệt')]}"  />
                    </group>
                    <group>
                      <field name="max_tranning_point"  attrs="{'readonly': [('stage_name', '=', 'Đã duyệt')]}"  />
                    </group>
                    <group>
                      <field string="All students: " name="is_for_all_students"/>
                    </group>
                    <!-- <group>
                      <field string="Giới hạn sinh viên các đơn vị" name="is_maximize_department"  attrs="{'invisible': [('is_for_all_students', '=', True)]}"/>
                    </group> -->
                  </group>
                  <group>
                    <group>
                      <field name="auto_confirm" string="Autocofirm"/>                 
                    </group>
                    <group>
                      <label for="seats_limited" string="Gioi han tham gia"/>
                      <div>
                        <field name="seats_limited"/>
                        <span attrs="{'invisible': [('seats_limited', '=', False)], 'required': [('seats_limited', '=', False)]}">
                          <field name="seats_max" class="oe_inline o_input_9ch"/> 
                          nguoi
                        </span>
                      </div>
                    </group>
                      <!-- <group>
                        <field string="Giới hạn sinh viên các chuyên ngành" name="is_maximize_major"  attrs="{'invisible': [('is_for_all_students', '=', True)]}"/>
                      </group>
                      <group>
                        <field  string="Giới hạn sinh viên các khóa" name="is_maximize_year"  attrs="{'invisible': [('is_for_all_students', '=', True)]}"/>         
                      </group> -->
                  </group> 
                </group>
                  <notebook>
                    <page string="Gioi han tham gia" name="tickets" attrs="{'invisible': [('is_for_all_students', '=', True)]}" >
                      <field name="event_ticket_ids" context="{
                        'default_event_name': name,
                        'tree_view_ref': 'event.event_event_ticket_view_tree_from_event',
                        'form_view_ref': 'event.event_event_ticket_view_form_from_event',
                        'kanban_view_ref': 'event.event_event_ticket_view_kanban_from_event'}" mode="tree,kanban"/>
                    </page>
                  

                    <page string="Communication" name="event_communication" invisible="1">
                        <field name="event_mail_ids">
                            <tree string="Communication" editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="notification_type"/>
                                <field name="template_model_id" invisible="1"/>
                                <field name="template_ref" options="{'hide_model': True, 'no_quick_create': True}" context="{'filter_template_on_event': True, 'default_model': 'event.registration'}"/>
                                <field name="interval_nbr" attrs="{'readonly':[('interval_unit','=','now')]}"/>
                                <field name="interval_unit"/>
                                <field name="interval_type"/>
                                <field name="scheduled_date" groups="base.group_no_one"/>
                                <field name="mail_count_done"/>
                                <field name="mail_state" widget="event_icon_selection" string=" " nolabel="1"
                                    options="{'sent': 'fa fa-check', 'scheduled': 'fa fa-hourglass-half', 'running': 'fa fa-cogs'}"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Notes" name="event_notes" invisible="1">
                        <group>
                            <label for="note" string="Note" />
                            <br />
                            <field nolabel="1" colspan="2" name="note" 
                                placeholder="Add some internal notes (to do lists, contact info, ...)" />
                            <label for="ticket_instructions" string="Ticket Instructions" />
                            <br />
                            <field nolabel="1" colspan="2" name="ticket_instructions" 
                                placeholder="e.g. How to get to your event, door closing time, ..." />
                        </group>
                    </page>
                </notebook>
            </sheet>
         
        </form>
        </xpath>  
      </field>
    </record>
 
