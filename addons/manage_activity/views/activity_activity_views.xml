<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id='activity_activity_action' model='ir.actions.act_window'>
      <field name="name">Activty</field>
      <field name="res_model">activity.activity</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Form View -->
    <record id="activity_activity_view_form" model="ir.ui.view">
      <field name="name">activity.activity.form</field>
      <field name="model">activity.activity</field>
      <field name="arch" type="xml">
        <form >
          <field name="name" />
        </form>
      </field>
    </record>

    <!-- Tree(list) View -->
    <record id="activity_activity_view_tree" model="ir.ui.view">
      <field name="name">activity.activity.tree</field>
      <field name="model">activity.activity</field>
      <field name="arch" type="xml">
        <tree >
          <field name="name"/>
        </tree>
      </field>
    </record>
  </data>
</odoo>
