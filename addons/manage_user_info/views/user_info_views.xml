<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
  <record id="view_user_filter" model="ir.ui.view">
    <field name="name">user.info.view.search</field>
    <field name="model">user.info</field>
    <field name="arch" type="xml">
      <search string="Search Course">
        <!-- Add your fields here -->
        <field name="name"/>
      </search> 
      <searchpanel>
        <field name="user_info_class_id" icon="fa-users" />
    </searchpanel>
    </field>
  </record>


  <record id="user_info_action" model="ir.actions.act_window">
    <field name="name">User Information</field>
    <field name="res_model">user.info</field>
    <field name="view_mode">tree,form</field>
  </record>
  <!-- <act_window id="user_info_action" name="User Info" res_model="ir.actions.act_window" limit="20" /> -->

  <data>
    <!-- Form View -->
    <record id="user_info_view_form" model="ir.ui.view">
      <field name="name">user.info.form</field>
      <field name="model">user.info</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group string="Avatar">
                <field name="avatar" widget="image" options="{'size': (128, 128)}"/>
                <field name="user_id" />
                <field name="name" />
                <field name="gender"/>
              </group>
              <group string="Basic">
                <field name="student_id"/>
                <field name="birth_date"/>
                <field name="phone_number"/>
                <field name="personal_email"/>
                <field name="religion"/>
              </group>
            </group>
            <group>
              <group string="National Info">
                <field name="national_id"/>
                <field name="native_address" />
                <field name="native_address_specific" />

              </group>
              <group>
                <group string="Permanent address">
                  <field name="permanent_address" />
                  <field name="permanent_address_specific" />
                </group>
              </group>
              <group string="Address">
                <field name="province_id" />
                <field name="district_id" domain="[('province_id', '=', province_id)]"/>
                <field name="ward_id" domain="[('district_id', '=', district_id)]"/>
              </group>
            </group>
            <group >
              <group string="Communist Party">
                <field name="date_communist_party" />
                <field name="place_communist_party" />
              </group>
              <group string="Youth Union">
                <field name="date_at_union" />
                <field name="place_union" />
              </group>
              <group string="Student Association">
                <field name="date_at_student_association" />
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

 <!-- Form View -->
 <record id="info_view_form" model="ir.ui.view">
  <field name="name">user.info</field>
  <field name="model">user.info</field>
  <field name="arch" type="xml">
    <form>
          <group>
            <group string="Avatar">
              <field name="avatar" widget="image" options="{'size': (128, 128)}"/>
              <field name="user_id" widget="invalid_input_field"/>
              <field name="name" />
              <field name="gender"/>
            </group>
            <group string="Basic" >
              <field name="student_id"/>
              <field name="birth_date"/>
              <field name="phone_number"/>
              <field name="personal_email"/>
              <field name="religion"/>
            </group>
          </group>
          <group>
            <group string="National Info">
              <field name="national_id"/>
              <field name="native_address" />
              <field name="native_address_specific" />

            </group>
            <group>
              <group string="Permanent address">
                <field name="permanent_address" />
                <field name="permanent_address_specific" />  
              </group>
            </group>
          </group>
          <group >
            <group string="Communist Party">
              <field name="date_communist_party" />
              <field name="place_communist_party" />
            </group>
            <group string="Youth Union">
              <field name="date_at_union" />
              <field name="place_union" />
            </group>
            <group string="Student Association">
              <field name="date_at_student_association" />
            </group>
          </group>
    </form>
  </field>
</record>

    <!-- Tree(list) View -->
    <record id="user_info_view_tree" model="ir.ui.view">
      <field name="name">user.info.tree</field>
      <field name="model">user.info</field>
      <field name="arch" type="xml">
        <tree>
          <field name="user_id" />
          <field name="student_id"/>
          <field name="name" />
          <field name="email" />
        </tree>
      </field>
    </record>

  </data>
</odoo>
