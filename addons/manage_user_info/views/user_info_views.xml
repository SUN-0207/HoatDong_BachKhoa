<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="user_infor_action" model="ir.actions.act_window">
      <field name="name">User Information</field>
      <field name="res_model">user.info</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Form View -->
    <record id="user_infor_view_form" model="ir.ui.view">
      <field name="name">User Info Form</field>
      <field name="model">user.info</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
           
            <group string="Email Info">
              <group>
                <field name="avatar_128" avatar_field="avatar_128"/>
              </group>
              <group >
                <field name="user_id" />
                <field name="sur_name" />
                <field name="first_name" />
              </group>
            </group>
              <!-- <notebook>
                  <page name="user_info_contact_id" string="Basic Info">
                    <field name="user_info_contact_id">
                      <tree>
                        <field name="student_id"/>
                        <field name="phone_number"/>
                        <field name="national_id"/>
                        <field name="native_address_specific"/>
                      </tree>
                    </field>
                  </page>
                  <page name="user_info_contact_id" string="Major Info">
                    <h2> Nothing</h2>
                  </page>
               </notebook> -->
          </sheet>
        </form>
      </field>
    </record>

    <!-- Tree(list) View -->
    <record id="user_info_view_tree" model="ir.ui.view">
      <field name="name">User Info List</field>
      <field name="model">user.info</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="email" />
        </tree>
      </field>
    </record>

  </data>
</odoo>
