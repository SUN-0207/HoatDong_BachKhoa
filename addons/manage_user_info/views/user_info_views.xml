    <record id="user_info_action" model="ir.actions.act_window">
      <field name="name">User Information</field>
      <field name="res_model">user.info</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Form View -->
    <record id="user_info_view_form" model="ir.ui.view">
      <field name="name">user.info.form</field>
      <field name="model">user.info</field>
      <field name="arch" type="xml">
        <form >
          <sheet>
            <group string="Basic">
              <group>
                <field name="avatar" widget="image" options="{'size': (128, 128)}" class="oe_avatar"/>
              </group>
              <group>
                <field name="user_id" invisible="1"/>
                <field name="first_name" placeholder="'Nguyễn Văn A' thì điền 'Nguyễn Văn'" />
                <field name="sur_name" placeholder="'Nguyễn Văn A' thì điền 'A'" />
                <field name="gender" widget="selection" required="1" placeholder="Vui lòng chọn"/>
                <field name="birth_date" required="1" placeholder="Vui lòng chọn"/>
              </group>
              <group >
                <field name="phone_number" required="1" widget="phone" placeholder="Vui lòng điền"/>
                <field name="personal_email" required="1" widget="email" placeholder="Vui lòng điền"/>
                <field name="religion" placeholder="Vui lòng chọn" />
                <field name="ethnicity" placeholder="Vui lòng chọn"/>
              </group>

            </group>
            <group>
              <group string="National Info">
                <field name="national_id" required="1" placeholder="Vui lòng điền"/>
                <field name="province_id_native" widget="selection" placeholder="Vui lòng chọn"/>
                <field name="district_id_native" widget="selection" domain="[('province_id', '=', province_id_native)]" placeholder="Vui lòng chọn" />
                <field name="ward_id_native" widget="selection" domain="[('district_id', '=', district_id_native)]" placeholder="Vui lòng chọn" />
                <field name="native_address_specific" placeholder="Số nhà, Tên đường"/>
              </group>
              <group string="Permanent address">
                <field name="province_id_permanent" placeholder="Vui lòng chọn"/>
                <field name="district_id_permanent" widget='selection' domain="[('province_id', '=', province_id_permanent)]" placeholder="Vui lòng chọn" />
                <field name="ward_id_permanent" widget='selection' domain="[('district_id', '=', district_id_permanent)]" placeholder="Vui lòng chọn" />
                <field name="permanent_address_specific" placeholder="Số nhà, Tên đường"/>
              </group>
            </group>
            <group >
              <group string="Student info">
                <field name="student_id" required="1" placeholder="Vui lòng điền"/>
                <field name="year_in" />
                <field name="user_info_department_id" widget="selection" required="1" placeholder="Vui lòng chọn"/>
                <field name="user_info_major_id" widget='selection' domain="[('department_id', '=', user_info_department_id)]" required="1" placeholder="Vui lòng chọn" />
                <field name="user_info_class_id" placeholder="Vui lòng chọn" widget='selection' domain="[('major_id', '=', user_info_major_id),]" required="1" />
              </group>
            </group>
            <group>
              <group string="Communist Party">
                <field name="date_communist_party" placeholder="Vui lòng chọn"/>
                <field name="place_communist_party" placeholder="Vui lòng điền"/>
              </group>
              <group string="Youth Union">
                <field name="date_at_union" placeholder="Vui lòng chọn"/>
                <field name="place_union" placeholder="Vui lòng điền"/>
              </group>
              <group string="Student Association">
                <field name="date_at_student_association" placeholder="Vui lòng chọn"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Tree(list) View -->
    <record id="user_info_view_tree" model="ir.ui.view">
      <field name="name">user.info.tree</field>
      <field name="model">user.info</field>
      <field name="arch" type="xml">
        <tree >
          <field name="name"/>
          <field name="email" />
          <field name="student_id" />
          <field name="phone_number" optional="hide"/>
          <field name="user_info_department_id" optional="show"/>
          <field name="user_info_major_id" optional="show"/>
          <field name="user_info_class_id" />
        </tree>
      </field>
    </record>
  </data>
</odoo>
