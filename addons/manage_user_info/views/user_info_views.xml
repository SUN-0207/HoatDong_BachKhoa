<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="user_info_action" model="ir.actions.act_window">
    <field name="name">User Information</field>
    <field name="res_model">user.info</field>
    <field name="view_mode">tree,form</field>
  </record>
  <!-- <act_window 
    id="user_info_action"
    name="User Info"
    res_model="ir.actions.act_window"
    limit="20"
  /> -->

  <data>
    <!-- Form View -->
    <record id="user_infor_view_form" model="ir.ui.view">
      <field name="name">user.info.form</field>
      <field name="model">user.info</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="user_id" />
              <field name="sur_name" />
              <field name="first_name" />
              <field name="email" />
              <field name="user_info_class_id"/>
              <!-- <field name="user_info_major_id"/> -->
              <!-- <field name="user_info_department_id"/> -->
              <!-- <field name="user_info_class_id" widget="many2one">
                <notebook>
                  <page string="Class Info">
                    <field name="name"></field>
                    <field name="major_id"></field>
                  </page>
                </notebook>
              </field> -->
            </group>
        </sheet>
        </form>
      </field>
    </record>

    <!-- Tree(list) View -->
    <record id="user_info_view_tree" model="ir.ui.view">
      <field name="name">user.info.tree</field>
      <field name="model">user.info</field>
      <field name="arch" type="xml">
        <tree>
          <field name="sur_name"/>
          <field name="first_name"/>
          <field name="email"/>
          <field name="user_info_class_id"/>
          <!-- <field name="user_info_major_id"/> -->
          <!-- <field name="user_info_department_id"/> -->
        </tree>
      </field>
    </record>

  </data>
</odoo>
