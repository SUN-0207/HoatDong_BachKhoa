<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="user_infor_action" model="ir.actions.act_window">
      <field name="name">User Information</field>
      <field name="res_model">user.info</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Form View -->
    <record id="user_infor_view_form" model="ir.ui.view">
      <field name="name">User Info Form</field>
      <field name="model">user.info</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
           <group>
            <group>
              <group>
                <field name="user_id" />
                <field name="sur_name" />
                <field name="first_name" />
                <field name="email" />
              </group>
              <group>
                <field name="gender" widget='option'/>
                <field name="birth_date"/>
                <field name="nation"/>
                <field name="religion"/>
              </group>
            </group>

            <group>
              <field name="student_id"/>
              <field name="phone_number"/>
              <field name="personal_email"/>
              <field name="national_id"/>
            </group>
              
            <group>
              <group>
                <field name="native_address"/>
                <field name="native_address_specific"/>
              </group>
              <group>
                <field name="permanent_address"/>
                <field name="permanent_address_specific"/>
              </group>
            </group>
             
            <group>
              <group>
                <field name="place_union"/>
                <field name="date_at_union"/>
              </group>
              <group>
                <field name="place_communist_party"/>
                <field name="date_at_student_association"/>
              </group>
            </group>

                
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Tree(list) View -->
    <record id="user_info_view_tree" model="ir.ui.view">
      <field name="name">User Info List</field>
      <field name="model">user.info</field>
      <field name="arch" type="xml">
        <tree>
          <field name="sur_name"/>
          <field name="first_name"/>
          <field name="email"/>
          <field name="phone_number"></field>
        </tree>
      </field>
    </record>

  </data>
</odoo>
